# Mainlayout, which will be used first
WidgetsExamples:

<WidgetsExamples>
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Count"
        # root is like a pointer to the associated class function
        on_press: root.on_button_click()
        disabled: not root.count_enabled
    Label:
        text: root.my_text
        # font_name: f"{environ[rooth_path]}/Fonts/Lcd.ttf"
        # font_name: root.font_lcd
        # font_name: "Lcd.ttf"
        font_size: "100dp"
        color: 1, .5, 1, 1
    Switch:
        id: my_switch
        on_active: not root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
        active: True
    Slider:
        id: my_slider
        min: 0
        max: 100
        value: 50
        # on_value: root.on_slider_value(self)
        orientation: "vertical"
        disabled: not my_switch.active

    Label:
        text: str(int(my_slider.value))
        # text: root.slider_value_txt
        font_size: "100dp"
        color: 1, 1, .5, 1
